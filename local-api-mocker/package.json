    "json-schema-ref-parser": "^4.0.4",
    "json-server": "^0.12.1",
    "jsonschema": "^1.2.2",
    "lodash.isstring": "^4.0.1",
    "merge": "^1.2.0",
    "multer": "^1.3.0",
    "rimraf": "^2.6.2",
    "stream-to-string": "^1.1.0",
    "yargs": "^10.0.3"
